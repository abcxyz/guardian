{
  "name": "guardian",
  "version": "0.0.1",
  "description": "A Terraform automation and actuation tool for GitHub Actions.",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "rm -rf ./.github/actions/**/dist",
    "build": "ncc build -m src/plan.ts -o ./.github/actions/guardian-plan/dist && ncc build -m src/apply.ts -o ./.github/actions/guardian-apply/dist",
    "lint": "eslint src/ test/ --ext .ts,.tsx",
    "format": "eslint src/ test/ --ext .ts,.tsx --fix",
    "pretest": "rm -rf ./test/terraform/*.tfplan && rm -rf ./test/terraform/*.tfstate && rm -rf ./test/terraform/*.terraform",
    "test": "mocha -r ts-node/register -t 150s 'test/*.test.ts' --exit"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/abcxyz/guardian.git"
  },
  "keywords": [
    "actions",
    "abcxyz",
    "terraform",
    "automation",
    "actuation",
    "guardian"
  ],
  "author": "Google LLC",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/abcxyz/guardian/issues"
  },
  "homepage": "https://github.com/abcxyz/guardian#readme",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^5.1.1",
    "@google-cloud/storage": "^6.9.4",
    "@google-github-actions/actions-utils": "^0.4.7",
    "@octokit/webhooks-definitions": "^3.67.3",
    "googleapis": "^109.0.1"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/js-yaml": "^4.0.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.9",
    "@types/sinon": "^10.0.13",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vercel/ncc": "^0.34.0",
    "chai": "^4.3.7",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "mocha": "^10.1.0",
    "prettier": "^2.8.0",
    "sinon": "^15.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3",
    "yaml": "^2.1.3"
  }
}
